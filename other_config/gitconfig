[alias]
	mer = merge
	c   = checkout
	ca  = commit -a
	s   = status
	b   = branch
	ba  = branch -a
	df  = diff
	pl  = pull
	ps  = push
	pso = push origin
	plo = pull origin
	ft  = fetch origin
	ftp = fetch -p origin
	lg  = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --

[push]
	default = simple

[branch]
	autosetuprebase = always
